@model WebData.Models.Login
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta property="og:description" content="Welcome to DELICI" />
    <title>DELICI</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Css bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Global css -->
    <link rel="stylesheet" href="~/css/style.css" />
    <!-- local css -->
    <link rel="stylesheet" href="~/css/login-signup.css" />
</head>

<body>
    <div class="banner-login">
        <div class="login">
            <div class="info-login">
                <div class="back">
                    <i class="fa-solid fa-chevron-up"></i>
                    <span><a href="javascript:void(0);" onclick="history.back()" class="text-light">Back</a></span>
                </div>
                <div class="account-none"><span>Don’t have an account? </span><a asp-action ="Register" asp-controller="Account">Signup</a></div>
            </div>
            <div class="greeting">
                <h3>Welcome <span> DELICI</span></h3>
                <p>Login to continue</p>
            </div>
            <div class="input-name">
                <form asp-action="Login" method="post"> 
                    <div class="input-info">
                        <p class="user">UserName</p>
                        <input asp-for="Username" type="text" placeholder="Your UserName" required/>
                        <i class="fa-solid fa-user"></i>
                    </div>
                    <p class="text-email"></p>
                    <div class="input-info">
                        <p class="user pass">Password</p>
                        <input asp-for="Password" type="password" placeholder="Password" class="password"required />
                        <i class="fa-solid fa-lock"></i>
                        <span class="passeye"><i class="fa-regular fa-eye active"></i> <i class="fa-regular fa-eye-slash"></i></span>
                    </div>
                    <p class="text-pass"></p>
                    <div class="forgot">
                        <div class="remember d-flex">
                            <label class="checkbox-btn">
                                <label for="checkbox"></label>
                                <input id="checkbox" type="checkbox" />
                                <span class="checkmark"></span>
                            </label>
                            <p>Remember me</p>
                        </div>
                        <p>Forgot passwork ?</p>
                    </div>
                    <button type="submit" class="btn2 login-button">Login</button>
                </form>
            </div>
            <div class="with">
                <p class="color"></p>
                <p class="text-color">or continue with</p>
                <p class="color"></p>
            </div>
            <ul class="media-contact">
                <li>
                    <a href=""><i class="fa-brands fa-google"></i></a>
                </li>
            </ul>
        </div>
    </div>
    <!-- jquery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css" />
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
    <!-- js bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- javascript -->
    <script src="/path/to/cdn/jquery.min.js"></script>
    <script src="~/jQuery-Plugin-For-Counting-Up-Numbers-While-Scrolling-numscroller/numscroller-1.0.js"></script>
    <script src="~/js/login-signup.js"></script>
</body>
</html>