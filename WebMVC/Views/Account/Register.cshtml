@model WebData.Models.Register
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Css bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Global css -->
    <link rel="stylesheet" href="~/css/style.css" />
    <!-- local css -->
    <link rel="stylesheet" href="~/css/signup.css" />
</head>

<body>
    <div class="banner-login">
        <div class="login">
            <div class="info-login">
                <div class="back">
                    <i class="fa-solid fa-chevron-up"></i>
                    <span><a href="javascript:void(0);" onclick="history.back()" class="text-light">Back</a></span>
                </div>
            </div>
            <div class="greeting">
                <h3>Register account at <span>DELICI</span></h3>
            </div>
            <div class="input-name">
                <form asp-action="Register" method="post"> 
                    <div class="input-info">
                        <p class="user">UserName</p>
                        <input asp-for="Username" type="text" placeholder="UserName" class="email name" />
                        <i class="fa-solid fa-user"></i>
                    </div>
                    <span asp-validation-for="Username" class="text-danger"></span>
                    <div class="input-info">
                        <p class="user">Full name</p>
                        <input asp-for="FullName" type="text" placeholder="Full name" class="email name" />
                        <i class="fa-solid fa-user"></i>
                    </div>
                    <span asp-validation-for="FullName" class="text-danger"></span>
                    <div class="input-info">
                        <p class="user">Phone Number</p>
                        <input asp-for="Phone" type="text" placeholder="Phone Number" class="email number" />
                        <i class="fa-solid fa-phone"></i>
                    </div>
                    <span asp-validation-for="Phone" class="text-danger"></span>
                    <div class="input-info">
                        <p class="user">Email</p>
                        <input asp-for="Email" type="text" placeholder="Your Email" class="email" />
                        <i class="fa-regular fa-envelope"></i>
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <div class="input-info">
                        <p class="user pass">Password</p>
                        <input asp-for="Password" type="password" placeholder="Password" class="password" />
                        <i class="fa-solid fa-lock"></i>
                        <span class="passeye"><i class="fa-regular fa-eye active"></i> <i class="fa-regular fa-eye-slash"></i></span>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <button type="submit" class="btn2 login-button">Login</button>
                </form>
            </div>
            <p class="haveacc">Already have account? <span><a asp-action="Login" asp-controller="Account" style="color: var(--mainColor);">Login</a></span></p>
        </div>
    </div>
    <!-- jquery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css" />
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
    <!-- js bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- javascript -->
    <script src="/path/to/cdn/jquery.min.js"></script>
    <script src="~/jQuery-Plugin-For-Counting-Up-Numbers-While-Scrolling-numscroller/numscroller-1.0.js"></script>
    <script src="~/js/signup.js"></script>
</body>

</html>

